<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:icon="@drawable/ic_baseline_language_24"
        app:title="@string/language_header">

        <ListPreference
            app:defaultValue="en"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="@string/language_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_baseline_notifications_24"
        app:title="@string/settings_notifications_category_title">
        <SwitchPreference
            app:key="notifications"
            app:summaryOff="@string/settings_notification_summary_off_text"
            app:summaryOn="@string/settings_notifications_summary_on_text"
            app:title="@string/settings_notifications_title" />
    </PreferenceCategory>
</PreferenceScreen>