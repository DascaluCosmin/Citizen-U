<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.ubb.citizen_u.ui.fragments.WelcomeFragment"
        android:label="@string/welcome_fragment_label"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/action_welcomeFragment_to_signedInMockupFragment"
            app:destination="@id/signedInMockupFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/signedInMockupFragment"
        android:name="com.ubb.citizen_u.ui.fragments.SignedInMockupFragment"
        android:label="@string/signed_in_fragment_label"
        tools:layout="@layout/fragment_signed_in_mockup">

        <action
            android:id="@+id/action_signedInMockupFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signedInMockupFragment_to_eventsListFragment"
            app:destination="@id/eventsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.ubb.citizen_u.ui.fragments.RegisterFragment"
        android:label="@string/multistep_register_fragment_label"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_identityInformationFragment"
            app:destination="@id/identityInformationFragment" />
    </fragment>
    <fragment
        android:id="@+id/identityInformationFragment"
        android:name="com.ubb.citizen_u.ui.fragments.multistep.registration.IdentityInformationFragment"
        android:label="@string/multistep_register_identity_information_label"
        tools:layout="@layout/fragment_identity_information">
        <action
            android:id="@+id/action_identityInformationFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="undefined" />
        <argument
            android:name="password"
            app:argType="string"
            android:defaultValue="undefined" />
    </fragment>
    <fragment
        android:id="@+id/eventsListFragment"
        android:name="com.ubb.citizen_u.ui.fragments.events.EventsListFragment"
        android:label="@string/events_list_fragment_label"
        tools:layout="@layout/fragment_events_list" />

</navigation>