<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_incident_layout"
    tools:context=".ui.fragments.reports.ReportIncidentFragment">

    <data>

        <variable
            name="reportIncidentFragment"
            type="com.ubb.citizen_u.ui.fragments.reports.ReportIncidentFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/report_incident_textview"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/principal_text_view_quarter_margin_top"
            android:text="@string/report_incident_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/report_incident_description_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/generic_margin"
            android:layout_marginTop="@dimen/generic_margin"
            android:hint="@string/incident_description_hint"
            app:layout_constraintEnd_toEndOf="@id/report_incident_textview"
            app:layout_constraintStart_toStartOf="@+id/report_incident_textview"
            app:layout_constraintTop_toBottomOf="@id/report_incident_textview">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="3"
                android:scrollbars="vertical" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/report_incident_imageview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/generic_margin"
            android:layout_marginVertical="@dimen/generic_margin_between_element"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toTopOf="@id/take_photo_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/report_incident_description_edittext"
            tools:src="@tools:sample/avatars" />

        <ProgressBar
            android:id="@+id/main_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/report_incident_imageview"
            app:layout_constraintEnd_toEndOf="@id/report_incident_imageview"
            app:layout_constraintStart_toStartOf="@id/report_incident_imageview"
            app:layout_constraintTop_toTopOf="@id/report_incident_imageview"
            tools:visibility="visible" />

        <Button
            android:id="@+id/take_photo_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> reportIncidentFragment.takePhoto()}"
            android:text="@string/take_photo_button_text"
            app:layout_constraintBottom_toBottomOf="@id/send_report_button"
            app:layout_constraintEnd_toStartOf="@id/send_report_button"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/send_report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/principal_text_view_quarter_margin_top"
            android:onClick="@{() -> reportIncidentFragment.sendIncidentReport()}"
            android:text="@string/send_report_button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/take_photo_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
